{
    "builders":[{
        "type": "docker",
        "pull": false,
        "image": "java:7-jre",
        "commit": true
    }],
    "provisioners":[
        {
            "type": "shell",
            "environment_vars": [ "PACKER_DISTRO_TYPE=debian", "ANSIBLE_VERSION=2.0.0.2", "PACKER_PLATFROM_TYPE=docker" ],
            "script": "scripts/setup.sh"
        },{
            "type": "ansible-local",
            "playbook_file": "provision.yml",
            "role_paths": [
              "../../../ansible-fitnesse"
            ],
            "extra_arguments": [
              "--tags=fitnesse-setup"
            ]
        },{
            "type": "shell",
            "environment_vars": [ "PACKER_DISTRO_TYPE=debian", "PACKER_PLATFROM_TYPE=docker" ],
            "script": "scripts/cleanup.sh"
        }
    ],
    "post-processors": [
        {
            "type": "docker-tag",
            "repository": "abessifi/fitnesse-debian-jessie",
            "tag": "0.1"
        }
    ]
}
